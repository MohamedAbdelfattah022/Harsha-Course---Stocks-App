@model Orders

@{
    Layout = null;
}

<link href="@("http://" + Context.Request.Host.ToString() + "/Stylesheet.css")" rel="stylesheet"/>

<div class="container page-content">
    <h1 class="app-title border-bottom pb">Orders</h1>

    <div class="box white-back">
        <table class="table w-100">
            <thead>
            <tr>
                <th class="w-25">Date and Time</th>
                <th>Stock</th>
                <th>Order Type</th>
                <th>Quantity</th>
                <th>Price</th>
                <th class="text-right">Trade Amount</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var sellOrder in Model.SellOrders) {
                <tr>
                    <td>@sellOrder.DateAndTimeOfOrder</td>
                    <td>@sellOrder.StockName</td>
                    <td class="text-red">Sell Order</td>
                    <td>@sellOrder.Quantity</td>
                    <td>@sellOrder.Price.ToString("C")</td>
                    <td class="text-right">@sellOrder.TradeAmount.ToString("N2")</td>
                </tr>
            }
            @foreach (var buyOrder in Model.BuyOrders) {
                <tr>
                    <td>@buyOrder.DateAndTimeOfOrder</td>
                    <td>@buyOrder.StockName</td>
                    <td class="text-green">Buy Order</td>
                    <td>@buyOrder.Quantity</td>
                    <td>@buyOrder.Price.ToString("C")</td>
                    <td class="text-right">@buyOrder.TradeAmount.ToString("N2")</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>